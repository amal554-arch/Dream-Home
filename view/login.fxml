<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="dreamhome.controller.LoginController"
      spacing="15" alignment="CENTER" prefWidth="300" prefHeight="250">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    
    <Label text="DreamHome Login" style="-fx-font-size: 18px;"/>
    
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    
    <Button text="Login" onAction="#onLoginClicked" />
    <Label fx:id="statusLabel" textFill="red" />

</VBox>
